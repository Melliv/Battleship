@page
@model WebApp.Pages_Cars.DetailsModel

@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<div>
    <h4>Car</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Car!.NumberPlate)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Car!.NumberPlate)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Car!.ReleaseYear)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Car!.ReleaseYear)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Car!.ReachedDate)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Car!.ReachedDate)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Car!.Mark)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Car!.Mark)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Car!.Model)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Car!.Model)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Car!.Mileage)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Car!.Mileage)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Car!.Gearbox)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Car!.Gearbox)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Car!.FuelType)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Car!.FuelType)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Car!.MarketPrice)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Car!.MarketPrice)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Car!.CarType)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Car!.CarType!.Name)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Car!.History)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Car!.History)
        </dd>
        <dt class="col-sm-2">
            Extenses Price
        </dt>
        <dd class="col-sm-10">
            @{ var sum = @Model.Car!.Expenses != null ? @Model.Car.Expenses!.Sum(e => e.Price) : 0;}
            @Html.DisplayFor(modelItem => sum)
        </dd>
        <dt class="col-sm-2">
            Extenses
        </dt>
        <dd class="col-sm-10">
            <table class="table table-striped">
                @if (@Model.Car!.Expenses != null)
                {
                    foreach (var expense in @Model.Car.Expenses)
                    {
                        <tr>
                            <td>
                                @expense.Date.ToShortDateString()
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => expense.Description)
                            </td>
                        </tr>
                    }
                }
            </table>
        </dd>

    </dl>
</div>
<div>
    <a asp-page="./Edit" asp-route-id="@Model.Car!.CarId">Edit</a> |
    <a asp-page="./Index">Back to List</a>
</div>
